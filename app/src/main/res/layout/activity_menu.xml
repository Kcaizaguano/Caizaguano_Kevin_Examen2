<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_menu_scene"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="427dp"
        android:layout_height="10dp"
        android:layout_marginTop="28dp"
        android:background="#E91E63"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <ImageButton
        android:id="@+id/ButtonComprar"
        android:layout_width="177dp"
        android:layout_height="244dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="25dp"
        android:layout_marginBottom="376dp"
        android:background="#E8FFFDFE"
        android:onClick="IrCompras"
        android:src="@drawable/compra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ButtonProductos"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ButtonFactura"
        android:layout_width="187dp"
        android:layout_height="228dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="92dp"

        android:background="#E8FFFDFE"
        android:onClick="IrVentas"
        android:src="@drawable/fac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonComprar" />

    <ImageButton
        android:id="@+id/ButtonProductos"
        android:layout_width="190dp"
        android:layout_height="244dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:onClick="IrPro"
        android:src="@drawable/prod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textViewCedula_"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="USUARIO CONECTADO:"
        android:textColor="#100F0F"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="9dp" />

</androidx.constraintlayout.widget.ConstraintLayout>