<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4503A9F4"
    tools:context=".ComprasMain">

    <EditText
        android:id="@+id/editTextBuscarProducto"
        android:layout_width="134dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="158dp"
        android:ems="10"
        android:hint="Buscar:"
        android:inputType="textPersonName"
        android:onClick="onClickTextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="417dp"
        android:layout_height="48dp"
        android:background="#2196F3"
        android:text="COMPRAR"
        android:textAlignment="center"
        android:textColor="#E9E7EC"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-7dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="414dp"
        android:layout_height="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="5dp"
        android:background="#C12F2F"
        android:text="Datos Producto"
        android:textAlignment="center"
        android:textColor="#E6E4EC"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBuscarProducto" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="180dp"
        android:layout_height="383dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CI. Cliente"
            android:textColor="#1C1B1B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_cedula"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:hint="#"
            android:textColor="#27378F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Codigo:"
            android:textColor="#1C1B1B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewCodigoProducto"
            android:layout_width="152dp"
            android:layout_height="38dp"
            android:textColor="#27378F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textColor="#171616"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#27378F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="PrecioVenta:"
            android:textColor="#1C1B1B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewCostoProducto"
            android:layout_width="match_parent"
            android:layout_height="43dp"

            android:textColor="#27378F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock:"
            android:textColor="#1C1B1B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewStock"
            android:layout_width="156dp"
            android:layout_height="39dp"
            android:textColor="#27378F"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="180dp"
        android:layout_height="114dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad:"
            android:textColor="#F44336"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editextCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textColor="#1C1B1B"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="145dp"
        android:layout_height="98dp"
        android:layout_marginEnd="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <CheckBox
            android:id="@+id/checkboxNombreProducto"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="@string/checkNombre"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkboxCodigoProdcto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="onCheckboxClicked"
            android:text="Codigo Producto"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="172dp"
        android:layout_height="109dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/btnCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFDFD"
            android:onClick="InsertarVenta"
            android:src="@drawable/carro"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="168dp"
        android:layout_height="121dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora:"
            android:textColor="#1C1B1B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewfecha"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="#27378F"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="148dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_menu_gallery" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewNUmeroFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:hint="#"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="NÂ° Factura"
        android:textColor="#BD1414"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="@+id/linearLayout5" />

    <Button
        android:id="@+id/button"
        android:layout_width="219dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="#10568E"
        android:onClick="VerProductos"
        android:text="Lista Productos"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_format_list_numbered_24"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>